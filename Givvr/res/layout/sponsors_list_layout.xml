<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">
 
    <RelativeLayout
        android:id="@+id/layoutsponsorlist"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
<RelativeLayout
        android:id="@+id/layoutsponsor_list_bg_one"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:padding="10dp"
        android:background="@drawable/sponsor_list_bg_one" >

    <TextView
        android:id="@+id/sponsorName"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:textStyle="bold"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:singleLine="true"
        android:background="@drawable/sponsor_list_bg_name"
        android:text="TextView" 
        android:clickable="true"/>

      <com.facebook.share.widget.LikeView
    android:id="@+id/like_view"
    android:layout_width="wrap_content"
    android:layout_height="25dp"
    android:layout_alignParentRight="true"
    android:layout_marginRight="5dp"
    android:layout_centerVertical="true"/>

    </RelativeLayout>
    <LinearLayout
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:background="@drawable/sponsor_list_bg_image">
        <ImageView
            android:id="@+id/sponsorImage"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:padding="5dp"
            android:scaleType="fitXY"
            android:clickable="true"/>
    </LinearLayout>
</RelativeLayout>
    <TextView
        android:id="@+id/sponsorDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/layoutsponsorlist"
        android:gravity="center"
        android:padding="15dp"
        android:textStyle="bold"
        android:text="" />

</RelativeLayout>