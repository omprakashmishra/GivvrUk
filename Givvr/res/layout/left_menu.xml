<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/left_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/menu_base"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/profilepic"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:adjustViewBounds="true"
        android:background="@drawable/profile_bg"
        android:padding="11dp"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/textName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profilepic"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:text="om-9069219794"
        android:textAllCaps="true"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#000000"
        android:textSize="17dp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/layoutMenu"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_below="@+id/textName"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true">

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dip"
            android:background="#dacadf" />

        <RelativeLayout
            android:id="@+id/homeRL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/homeIcon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/home_new" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/homeIcon"
                android:text="Raise"
                android:textColor="#000000"
                android:textSize="18sp" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_gravity="right"
                android:src="@drawable/right_arrow" />
        </RelativeLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dip"
            android:background="#dacadf" />

        <ImageButton
            android:id="@+id/menu_option_profile"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/selector_left_menu_profile" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dip"
            android:background="#dacadf" />

        <RelativeLayout
            android:id="@+id/rankingRL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/rankIcon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ranking" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/rankIcon"
                android:text="Ranking"
                android:textColor="#000000"
                android:textSize="18sp" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_gravity="right"
                android:src="@drawable/right_arrow" />
        </RelativeLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dip"
            android:background="#dacadf" />


        <ImageButton
            android:id="@+id/menu_option_sponsors"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/selector_left_menu_sponsors" />


        <View
            android:layout_width="wrap_content"
            android:layout_height="1dip"
            android:background="#dacadf" />

        <RelativeLayout
            android:id="@+id/donateRL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/dollerIcon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/pound" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/dollerIcon"
                android:text="Donate"
                android:textColor="#000000"
                android:textSize="18sp" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_gravity="right"
                android:src="@drawable/right_arrow" />
        </RelativeLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dip"
            android:background="#dacadf" />

        <ImageButton
            android:id="@+id/menu_option_settings"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/selector_left_menu_settings" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dip"
            android:background="#dacadf" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:src="@drawable/logo"
        android:layout_below="@+id/layoutMenu"
        />

</RelativeLayout>