<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="8dp">

    <LinearLayout
        android:id="@+id/layoutRateUs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" 
        android:gravity="center_horizontal"
        android:padding="20dp"
    	android:background="@color/givvrDefaultColor">
    <TextView
        android:id="@+id/textRateUsMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enjoying Givvr?"
        android:textStyle="bold"
        android:textSize="16dp"
        android:textColor="@color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_weight="0.5"
            android:text="Not Really" 
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="14dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/selector_rateus_button_one"/>

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_weight="0.5"
            android:text="YES!" 
            android:textStyle="bold"
            android:textColor="@color/givvrDefaultColor"
            android:textSize="14dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/selector_rateus_button_two"/>

    </LinearLayout>
</LinearLayout>
 </LinearLayout>