<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/left_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/menu_base"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/profilepic"
        android:layout_width="155dp"
        android:layout_height="155dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="55dp"
        android:background="@drawable/profile_bg"
        android:padding="11dp" />

    <TextView
        android:id="@+id/textName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profilepic"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:text=""
        android:textAllCaps="true"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#000000"
        android:textSize="20dp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/layoutMenu"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:gravity="center"
        android:orientation="vertical">
        <View
            android:layout_width="wrap_content"
            android:layout_height="1dip"
            android:background="#dacadf" />

        <RelativeLayout
            android:id="@+id/homeRL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"


            android:padding="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/homeIcon"
                android:layout_width="20dp"
                android:layout_marginLeft="40dp"
                android:layout_height="20dp"
                android:src="@drawable/home_new" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/homeIcon"
                android:text="Raise"
                android:textColor="#000000"
                android:textSize="18sp" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginRight="40dp"
                android:layout_alignParentRight="true"
                android:layout_gravity="right"
                android:src="@drawable/right_arrow" />
        </RelativeLayout>
        <View
            android:layout_width="wrap_content"
            android:layout_height="1dip"
            android:background="#dacadf" />

        <ImageButton
            android:id="@+id/menu_option_profile"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:background="@null"
            android:src="@drawable/menu_option_one" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dip"
            android:background="#dacadf" />
        <RelativeLayout
            android:id="@+id/rankingRL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:paddingLeft="50dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/rankIcon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ranking" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/rankIcon"
                android:text="Ranking"
                android:textColor="#000000"
                android:textSize="18sp" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="50dp"
                android:layout_gravity="right"
                android:src="@drawable/right_arrow" />
        </RelativeLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dip"
            android:background="#dacadf" />
        <ImageButton
            android:id="@+id/menu_option_sponsors"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:background="@null"
            android:src="@drawable/menu_option_three" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dip"
            android:background="#dacadf" />
        <RelativeLayout
            android:id="@+id/donateRL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:paddingLeft="50dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/dollerIcon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/doller" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/dollerIcon"
                android:text="Donate"
                android:textColor="#000000"
                android:textSize="18sp" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="50dp"
                android:layout_gravity="right"
                android:src="@drawable/right_arrow"/>
        </RelativeLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dip"
            android:background="#dacadf" />

        <ImageButton
            android:id="@+id/menu_option_settings"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:background="@null"
            android:src="@drawable/menu_option_two" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dip"
            android:background="#dacadf" />




    </LinearLayout>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="210dp"
        android:layout_height="200dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:src="@drawable/logo" />

</RelativeLayout>